
section
	.llistaVisible
		display block
		margin 0 auto
		max-width 680px
.bgHeader
	.montsia
		background-size 100% 380px
		height 380px
		top 60px
.menu
	background none
	height auto
	position relative 
	z-index 4
	animation animacion 1.2s 1
	-webkit-animation animacion 1.2s 1
	.botones
		.botonMenu
			a
				text-decoration none
			.compartir
			.menuResizer
				display none
			.mapa
				background secundario
				border-radius 50%
				bottom 20px
				color rgba(white,1)
				font-size 1.15em
				height 50px
				line-height 2.15em
				position fixed
				right 20px
				text-align center
				width 50px
				&:after
					content '\e606'
					font-family icono
					font-size .9em
				&:active
					color rgba(white,.3)
	.resizer
		display none
	.social
		background none
		border-radius 4px
		border-top none
		display block
		left 10px 
		position fixed
		bottom 10px
		height 120px
		width 200px
		.botonSocial
			.facebook
				position relative
				top 20px
				left 20px
			.twitter
				position relative
				top 60px
				left -110px
@keyframes animacion
	0%
		opacity 0
	100%
		opacity 1
