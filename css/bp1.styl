
.bg 
	background #9fc1e0
	height 100%
	left 0
	position fixed
	top 0
	width 100%
	z-index -50
.menu
	background secundario
	border-radius 5px
	bottom 0
	color white
	left 0
	margin 0 auto .4em auto
	position fixed
	right 0
	width 97%
	z-index 20
	animation animacionMenu 1s 1
	-webkit-animation animacionMenu 1s 1
	.botones
		.botonMenu
			display inline-block
			line-height 2em
			text-align center
			width 32%
			a
				color white
				text-decoration none
			.compartir
				// color rgba(#283148,1)
				font-size 1.2em
				&:after
					content '\e602'
					font-family icono
					font-size .85em
				&:active
					color rgba(white,.3)
			.mapa
				// color rgba(#283148,1)
				font-size 1.15em
				&:after
					content '\e607'
					font-family icono
					font-size .7em
				&:active
					color rgba(white,.3)
			.menuResizer
				font-weight 400
				&:active
					color rgba(white,.3)
				.aumentar
					&:after
						content 'A'
						font-size 1em
				.disminuir
					&:after
						content 'A'
						font-size .6em
	.resizer
		background rgba(black,.2)
		border-top 1px solid rgba(#283148,.4)
		box-shadow 0px 1px 0px rgba(white,.1)
		color rgba(white,.7)
		padding .4em 0
		.botonResizer
			display inline-block
			font-weight 400
			text-align center
			width 49%
			.disminuir
				border-right 1px solid rgba(#283148,.4)
				box-shadow 1px 0px 0px rgba(white,.1)
				&:after
					content 'A'
					font-size .7em
				&:active
					color rgba(white,.3)
			.aumentar
				&:after
					content 'A'
					font-size 1.2em
				&:active
						color rgba(white,.3)
	.social
		background rgba(black,.2)
		border-top 1px solid rgba(#283148,.45)
		padding .8em 0 .6em 0
		.botonSocial
			display inline-block
			font-weight 400
			text-align center
			width 49%
			.twitter
				margin 0 0 0 1.5em
.invisible
	display none
.patron
	position fixed
	top 0
	bottom 0
	right 0
	left 0
	width 100%
	height 100%
	background-image url(../img/patronBlanco.png)
	background-repeat repeat
	background-size 200px auto
	z-index -5
	opacity .3